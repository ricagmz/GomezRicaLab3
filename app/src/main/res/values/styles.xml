<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorBackground"> #84ffff </item>
        <item name="android:textColor">#ffffff</item>
        <item name ="android:textSize">15dp</item>
        <item name ="android:layout_width">150dp</item>
        <item name ="android:layout_height">50dp</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name ="android:layout_width">250dp</item>
        <item name ="android:layout_height">35dp</item>
        <item name ="android:textSize">20dp</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name ="android:layout_width">251dp</item>
        <item name ="android:layout_height">33dp</item>
        <item name ="android:textSize">15dp</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="Image">
        <item name ="android:layout_width">450dp</item>
        <item name ="android:layout_height">240dp</item>
    </style>



</resources>
